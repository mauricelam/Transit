<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/stoplist_item_icon"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/s_unknown"
        android:src="@drawable/icon_unknown" android:layout_centerVertical="true">
    </ImageView>

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/stoplist_item_bigtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/stoplist_item_icon"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Name"
            android:textColor="#FFCCCCCC"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stoplist_item_smalltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stoplist_item_bigtext"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/stoplist_item_bigtext"
            android:layout_below="@+id/stoplist_item_bigtext"
            android:text="bus stop"
            android:textColor="#FF666666"
            android:textSize="12dp" />

</RelativeLayout>