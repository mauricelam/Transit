<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/stoplist_item_icon"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_marginRight="5dp"
        android:contentDescription="\?"
        android:src="@drawable/icon_unknown" >
    </ImageView>

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/stoplist_item_bigtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/stoplist_item_icon"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/stopsearch_noresult"
        android:textColor="#FFCCCCCC"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/stoplist_item_smalltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/stoplist_item_bigtext"
        android:layout_toRightOf="@+id/stoplist_item_icon"
        android:text="@string/stopsearch_noresult_line2"
        android:textColor="#FF666666"
        android:textSize="12dp"/>

</RelativeLayout>